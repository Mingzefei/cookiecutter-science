# Makefile for LaTeX document

# Set the name of your main LaTeX file (without the .tex extension)
MAIN = manuscript

# Set the name of the output PDF file
PDF = $(MAIN).pdf

# Set the name of the LaTeX compiler for XeLaTeX, pdfLaTeX, and BibTeX
XELATEX = xelatex
PDFLATEX = pdflatex
BIBTEX = bibtex

# Set any additional options for the LaTeX compilers
LATEX_OPTIONS = -interaction=nonstopmode

# Compile the LaTeX document using XeLaTeX
xe: $(MAIN).tex
	$(XELATEX) $(LATEX_OPTIONS) $(MAIN)
	$(BIBTEX) $(MAIN)
	$(XELATEX) $(LATEX_OPTIONS) $(MAIN)
	$(XELATEX) $(LATEX_OPTIONS) $(MAIN)

# Compile the LaTeX document using pdfLaTeX
pdf: $(MAIN).tex
	$(PDFLATEX) $(LATEX_OPTIONS) $(MAIN)
	$(BIBTEX) $(MAIN)
	$(PDFLATEX) $(LATEX_OPTIONS) $(MAIN)
	$(PDFLATEX) $(LATEX_OPTIONS) $(MAIN)

# Default target: compile the LaTeX document using XeLaTeX
all: xe

# Clean up intermediate files
clean:
	rm -f $(MAIN).aux $(MAIN).bbl $(MAIN).blg $(MAIN).log $(MAIN).out $(MAIN).toc $(MAIN).thm $(MAIN).lof $(MAIN).lot

# Clean up all intermediate files, including those generated by BibTeX
cleanall: clean
	rm -f $(MAIN).bbl $(MAIN).blg $(MAIN).pdf

